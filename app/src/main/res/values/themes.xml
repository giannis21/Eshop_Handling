<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EshopHandling" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bordered_radius_24dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:elevation">24dp</item>
    </style>

    <style name="EditProfileEditTextTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHighlight">@color/CoolGray</item>
    </style>

    <style name="small_text_bold">
        <item name="android:fontFamily">@font/akkuratllgrk_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="small_text_bold1">
        <item name="android:fontFamily">@font/akkuratllgrk_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">22sp</item>
        <item name="android:textColor">@color/Black3</item>
    </style>

    <style name="caption_bold">
        <item name="android:fontFamily">@font/akkuratllgrk_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="button_medium">
        <item name="android:fontFamily">@font/akkuratllgrk_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>